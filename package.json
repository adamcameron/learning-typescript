{
  "name": "learning-typescript",
  "version": "0.1.0",
  "type": "module",
  "dependencies": {
    "@types/node": "^24.3.1",
    "nodemon": "^3.1.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "dev": "tsc && node src/typescript-learning/shared/waiter.ts",
    "lint:watch": "nodemon --watch src --ext ts,tsx --exec 'npx eslint --no-cache'",
    "test": "vitest --typecheck",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage --api.host 0.0.0.0",
    "prettier-format": "prettier --config .prettierrc --write 'src/**/*.ts' 'tests/**/*.ts'"
  }
}
